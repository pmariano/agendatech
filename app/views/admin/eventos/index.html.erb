<b><%= flash[:notice]%></b><br/><br/>

<% if @eventos.empty? %>
	Nenhum evento para aprovar.
<% else  %>
	Eventos para aprovar:
	<br /><br />
	<% for evento in @eventos %>
		<%= evento.nome %>
		<%= link_to "Aprovar", :action => "aprovar", :id => evento %>
		<%= link_to "Remover", :action => "remover", :id => evento %>
		<br/><br/>
	<% end  %>
<% end  %>

<hr/>
Editar Eventos:
<br/><br/>
<% for evento in @eventos_editar %>

	<%= evento.nome %> <%= link_to 'editar',:action => "editar", :id => evento %> <br/>

<% end %>